# .env.example

# Usado pela aplicação e pelo Prisma
# DATABASE_URL="postgresql://apontador:apontador_password@localhost:5432/apontador?schema=public"

# # Outras variáveis que sua app pode necessitar
# NEXT_PUBLIC_API_URL=http://localhost:3000
# PORT=3000
# JWT_SECRET=Ab@1Seguro1

# ===========================================
# APONTADOR 1.0 - Variáveis de Ambiente
# ===========================================

# ===== BANCO DE DADOS =====
# URL de conexão PostgreSQL (Supabase ou outro provedor)
# Formato: postgresql://usuario:senha@host:porta/database?schema=public
DATABASE_URL=postgresql://apontador:apontador_password@localhost:5432/apontador?schema=public

# ===== AUTENTICAÇÃO =====
# Chave secreta para JWT (use uma chave forte em produção)
JWT_SECRET=Ab@1Seguro1

# ===== CONFIGURAÇÃO DO SERVIDOR =====
# Porta do servidor (Vercel usa PORT automaticamente)
PORT=3000

# ===== FRONTEND =====
# URL da API para o frontend (em produção será a URL do Vercel)
NEXT_PUBLIC_API_URL=http://localhost:3000

# URL base do frontend (para CORS e redirects)
FRONTEND_URL=http://localhost:3001

# ===== SUPABASE (se usando) =====
# URL do projeto Supabase
SUPABASE_URL=https://seu-projeto.supabase.co

# Chave anônima do Supabase
SUPABASE_ANON_KEY=Ab@1Seguro1

# Chave de serviço do Supabase (apenas backend)
SUPABASE_SERVICE_KEY=Ab@1Seguro1

# ===== CONFIGURAÇÕES OPCIONAIS =====
# Ambiente de execução
NODE_ENV=development

# Timeout para queries do banco (em ms)
DATABASE_TIMEOUT=10000

# Limite de conexões do pool
DATABASE_POOL_MAX=10

# ===== LOGS E MONITORAMENTO =====
# Nível de log (error, warn, info, debug)
LOG_LEVEL=info

# ===== CORS =====
# Origens permitidas (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===== UPLOADS (se necessário) =====
# Diretório para uploads
UPLOAD_DIR=./uploads

# Tamanho máximo de arquivo (em bytes)
MAX_FILE_SIZE=5242880

# ===== CACHE =====
# TTL do cache em segundos
CACHE_TTL=300

# ===== RATE LIMITING =====
# Máximo de requests por minuto por IP
RATE_LIMIT_MAX=100

# Janela de tempo para rate limiting (em ms)
RATE_LIMIT_WINDOW=60000